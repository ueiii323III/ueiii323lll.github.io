<!--index-simple.wxml-->
<view class="container">
  <view class="header">
    <text class="title">健康打卡</text>
  </view>
  
  <view class="content">
    <view class="welcome">
      <text class="welcome-text">欢迎使用健康打卡小程序！</text>
    </view>
    
    <view class="test-section">
      <text class="section-title">功能测试</text>
      <button class="test-btn" bindtap="testNavigation">测试导航</button>
      <button class="test-btn" bindtap="testStorage">测试存储</button>
    </view>
    
    <view class="status">
      <text class="status-title">当前状态：</text>
      <text class="status-text">{{statusText}}</text>
    </view>
  </view>
</view>